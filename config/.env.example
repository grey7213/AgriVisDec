# AgriDec 环境配置文件示例
# 复制此文件为 .env 并根据实际环境修改配置

# ==================== 基础配置 ====================
# Flask环境 (development/production/testing)
FLASK_ENV=development

# 应用密钥 (生产环境请使用随机生成的复杂密钥)
SECRET_KEY=agridec-secret-key-2025

# ==================== 数据库配置 ====================
# 开发环境 - SQLite
DEV_DATABASE_URL=sqlite:///agridec.db

# 生产环境 - MySQL
DATABASE_URL=mysql+pymysql://agridec_user:agridec_password_2025@localhost/agridec?charset=utf8mb4

# MySQL连接参数
MYSQL_HOST=localhost
MYSQL_USER=agridec_user
MYSQL_PASSWORD=agridec_password_2025
MYSQL_DATABASE=agridec

# ==================== 爬虫配置 ====================
# 爬虫请求延迟配置 (秒)
CRAWLER_DELAY_MIN=1
CRAWLER_DELAY_MAX=3

# 爬虫超时和重试配置
CRAWLER_TIMEOUT=30
CRAWLER_MAX_RETRIES=3

# ==================== 调度器配置 ====================
# 数据采集时间 (24小时制，格式: HH:MM)
SEED_CRAWL_TIME=06:00
WEATHER_CRAWL_TIME=07:00
MACHINE_CRAWL_TIME=08:00

# 系统维护时间
DATA_CLEANUP_TIME=02:00
BACKUP_TIME=03:00

# 健康检查间隔 (秒)
HEALTH_CHECK_INTERVAL=3600

# ==================== 数据保留配置 ====================
# 各类数据保留天数
SEED_RETENTION_DAYS=365
WEATHER_RETENTION_DAYS=90
MACHINE_RETENTION_DAYS=180
LOG_RETENTION_DAYS=30

# ==================== 日志配置 ====================
# 日志级别 (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# 日志文件路径
LOG_FILE=logs/app.log

# 日志文件大小限制 (字节)
LOG_MAX_BYTES=10485760

# 日志文件备份数量
LOG_BACKUP_COUNT=5

# ==================== 缓存配置 ====================
# 缓存类型 (simple/redis)
CACHE_TYPE=simple

# 缓存超时时间 (秒)
CACHE_TIMEOUT=300

# Redis连接URL (如果使用Redis缓存)
REDIS_URL=redis://localhost:6379/0

# ==================== API配置 ====================
# API访问频率限制
API_RATE_LIMIT=100/hour

# API分页配置
API_MAX_PAGE_SIZE=100
API_DEFAULT_PAGE_SIZE=20

# ==================== 安全配置 ====================
# 允许的主机 (生产环境)
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# CORS配置
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# ==================== 邮件配置 (可选) ====================
# SMTP服务器配置
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# 管理员邮箱
ADMIN_EMAIL=admin@your-domain.com

# ==================== 监控配置 (可选) ====================
# 是否启用性能监控
ENABLE_MONITORING=false

# 监控数据保留天数
MONITORING_RETENTION_DAYS=7

# ==================== 第三方服务配置 (可选) ====================
# 短信服务配置
SMS_API_KEY=your-sms-api-key
SMS_API_SECRET=your-sms-api-secret

# 地图服务API密钥
MAP_API_KEY=your-map-api-key

# ==================== 开发调试配置 ====================
# 是否启用SQL查询日志
SQLALCHEMY_ECHO=false

# 是否启用Flask调试工具栏
DEBUG_TB_ENABLED=false

# 是否启用性能分析
PROFILING_ENABLED=false
